<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/blue"
    tools:context=".MainActivity">

   <TextView
       android:id="@+id/imv_fb"
       android:layout_width="match_parent"
       android:layout_height="130dp"
       android:layout_marginBottom="@dimen/edt_margin_bottom"
       android:layout_marginLeft="@dimen/edt_margin_left"
       android:layout_marginRight="@dimen/edt_margin_right"
       android:layout_marginTop="60dp"
       android:text="@string/logo"
       android:textSize="@dimen/logo"
       android:textStyle="bold"
       android:textColor="@color/white"
       android:gravity="center"/>

   <EditText
       android:id="@+id/edt_email"
       android:layout_below="@id/imv_fb"
       android:layout_marginBottom="@dimen/edt_margin_bottom"
       android:layout_marginLeft="@dimen/edt_margin_left"
       android:layout_marginRight="@dimen/edt_margin_right"
       android:layout_marginTop="@dimen/edt_margin_top"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:hint="@string/hint_email_phone"
       android:padding="@dimen/text_padding"
       android:background="@drawable/round_border_edit_text"
       android:textColor="@color/black" />

   <EditText
       android:id="@+id/edt_pass"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_below="@id/edt_email"
       android:layout_marginBottom="@dimen/edt_margin_bottom"
       android:layout_marginLeft="@dimen/edt_margin_left"
       android:layout_marginRight="@dimen/edt_margin_right"
       android:layout_marginTop="@dimen/edt_margin_top"
       android:background="@drawable/round_border_edit_text"
       android:hint="@string/hint_pass"
       android:padding="@dimen/text_padding"
       android:textColor="@color/black" />


   <Button
       android:id="@+id/btn_login"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_below="@id/edt_pass"
       android:layout_marginBottom="@dimen/edt_margin_bottom"
       android:layout_marginLeft="@dimen/edt_margin_left"
       android:layout_marginRight="@dimen/edt_margin_right"
       android:layout_marginTop="@dimen/edt_margin_top"
       android:background="@drawable/round_border_button"
       android:text="@string/text_login"
       android:textStyle="bold"
       android:textColor="@color/white"/>


   <TextView
       android:id="@+id/textView2"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_alignParentBottom="true"
       android:layout_marginLeft="@dimen/edt_margin_left"
       android:layout_marginRight="@dimen/edt_margin_right"
       android:layout_marginBottom="@dimen/sign_up_margin_bottom"
       android:gravity="center"
       android:text="@string/text_sign_up"
       android:padding="@dimen/text_padding"
       android:textColor="@color/white"
       android:textSize="@dimen/text_size_small" />


   <TextView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_alignRight="@+id/imv_fb"
       android:layout_alignTop="@+id/textView2"
       android:background="@drawable/question_icon"
       android:paddingLeft="@dimen/question_icon_padding"
       android:paddingRight="@dimen/question_icon_padding"
       android:text="@string/question"
       android:textColor="@color/white"
       android:textSize="@dimen/text_size_question_icon"
       android:textStyle="bold" />

</RelativeLayout>